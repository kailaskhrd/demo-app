<% @categories.each do |category| %>
  <tr>
    <td><%= category.name %></td>
    <td><%= category.rank %></td>
    <td><%= category.parent.try(:name) %></td>
    <td><%= link_to "Edit", edit_category_path(category), remote: true, class: "btn btn-default" %></td>
    <td><%= link_to "Delete", category_path(category), method: 'delete', remote: true, class: "btn btn-danger" %></td>
  </tr>
<% end %>
