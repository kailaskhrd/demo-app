<h1>Product</h1>
<div class="col-lg-6">
  <table class ="table">
    <tr>
      <td></td>
      <td><%= image_tag @product.photo %></td>
    </tr>

    <tr>
      <td>Title</td>
      <td><%=@product.title%></td>
    </tr>

    <tr>
      <td>Price</td>
      <td><%=@product.price%></td>
    </tr>

    <tr>
      <td>Description</td>
      <td><%=@product.description%></td>
    </tr>
    <tr>
      <td>Category</td>
      <td><%=@product.category.try(:name)%></td>
    </tr>

  </table>
</div>
